<%- include('../partials/head') %>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
    }

    main {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 90vh;
    }

    .message-box {
        background-color: #fff;
        padding: 2.5rem 3.5rem;
        border-radius: 20px;
        box-shadow: 0 10px 25px rgba(255, 105, 180, 0.25);
        text-align: center;
        max-width: 500px;
        animation: fadeIn 0.8s ease-in-out;
    }

    .message-box p {
        font-size: 1.1rem;
        color: #333;
        margin: 0.8rem 0;
    }

    .message-box strong {
        font-size: 1.3rem;
        color: #000000;
    }

    .message-box a {
        display: inline-block;
        margin: 1rem 0.4rem 0 0.4rem;
        text-decoration: none;
        background-color: #3498db;
        color: white;
        padding: 0.6rem 1.3rem;
        border-radius: 10px;
        font-size: 0.95rem;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .message-box a:hover {
        background-color: #ff1493;
        transform: scale(1.05);
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<body>
    <%- include('../partials/header') %>
    <main>
        <div class="message-box">
            <p><strong>Your home has been added successfully!</strong></p>
            <p>Best regards,</p>
            <p>The Airbnb Team</p>
            <p>
                <a href="/">üè† Go to Home</a>
                <a href="/host/add-home">‚ûï Add another home</a>
            </p>
        </div>
    </main>
</body>
</html>
