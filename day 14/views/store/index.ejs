<%- include('../partials/head') %>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
        color: #333;
    }

    main {
        padding: 3rem 2rem;
        max-width: 1200px;
        margin: auto;
    }

    h1 {
        color: #000000;
        text-align: center;
        margin-bottom: 3rem;
        font-size: 2.5rem;
        font-weight: 700;
    }

    .grid-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        padding: 0;
        list-style: none;
    }

    .home-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 8px 20px rgba(255, 20, 147, 0.12);
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .home-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 24px rgba(255, 20, 147, 0.25);
    }

    .home-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .home-info {
        padding: 1.5rem;
    }

    .home-info h2 {
        margin: 0.5rem 0;
        font-size: 1.6rem;
        color: #000000;
    }

    .home-info p {
        margin: 0.4rem 0;
        font-size: 1rem;
    }

    .price {
        color: #000000;
        font-weight: bold;
    }

    .home-info .rating {
        color: #ff9800;
        font-weight: 500;
    }

    .home-info .contact {
        color: #333;
    }

    .home-info button {
        background-color: #3498db;
        color: white;
        border: none;
        padding: 0.7rem 1.4rem;
        border-radius: 10px;
        font-size: 1rem;
        cursor: pointer;
        margin-top: 1rem;
        transition: all 0.3s ease;
    }

    .home-info button:hover {
        background-color: #ff1493;
        transform: scale(1.06);
    }

</style>

<body>
    <%- include('../partials/header') %>

    <main>
        <h1>Find Your Perfect Stay</h1>
        <ul class="grid-container">
            <% registeredHome.forEach(function(home) { %>
                <li class="home-card">
                    <img src="<%= home.image %>" alt="<%= home.housename %>" class="home-image">
                    <div class="home-info">
                        <h2><%= home.housename %></h2>
                        <p><strong>Location:</strong> <%= home.location %></p>
                        <p class="price"><strong>Price:</strong> $<%= home.price %> / night</p>
                        <p class="rating"><strong>Rating:</strong> <%= home.rating %> ‚≠ê</p>
                        <p class="contact"><strong>Contact:</strong> <%= home.contact %></p>
                        <button>Book Now</button>
                    </div>
                </li>
            <% }) %>
        </ul>
    </main>
</body>
</html>
