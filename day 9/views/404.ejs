<%- include('partials/head') %>
<%- include('partials/header') %>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
    }

    main {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 90vh;
    }

    .error-box {
        text-align: center;
        background-color: #ffe4ec;
        padding: 3rem;
        border-radius: 16px;
        box-shadow: 0 8px 16px rgba(255, 105, 180, 0.2);
        max-width: 500px;
    }

    .error-box h1 {
        font-size: 3rem;
        color: #ff1493;
        margin-bottom: 1rem;
    }

    .error-box p {
        font-size: 1.2rem;
        color: #555;
        margin-bottom: 1.5rem;
    }

    .error-box a {
        display: inline-block;
        text-decoration: none;
        color: white;
        background-color: #ff69b4;
        padding: 0.7rem 1.5rem;
        border-radius: 10px;
        font-size: 1rem;
        transition: background-color 0.3s ease;
    }

    .error-box a:hover {
        background-color: #ff1493;
    }
</style>

<body>
    <main>
        <div class="error-box">
            <h1>404</h1>
            <p>Oops! Page not found.</p>
            <a href="/">Go to Home</a>
        </div>
    </main>
</body>
</html>
