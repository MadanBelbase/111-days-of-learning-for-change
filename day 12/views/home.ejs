<%- include('partials/head') %>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
    }

    main {
        padding: 2rem;
    }

    h1 {
        color: #ff69b4;
        text-align: center;
        margin-bottom: 2.5rem;
        font-size: 2rem;
    }

    .grid-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 2rem;
        list-style: none;
        padding: 0;
    }

    .home-card {
        background-color: #ffe4ec;
        border-radius: 16px;
        box-shadow: 0 6px 12px rgba(255, 105, 180, 0.15);
        overflow: hidden;
        transition: transform 0.3s ease;
    }

    .home-card:hover {
        transform: scale(1.02);
    }

    .home-image {
        width: 100%;
        height: 180px;
        object-fit: cover;
    }

    .home-info {
        padding: 1rem 1.2rem;
    }

    .home-info h2 {
        color: #ff1493;
        margin: 0.5rem 0;
        font-size: 1.4rem;
    }

    .home-info p {
        margin: 0.3rem 0;
        font-size: 0.95rem;
        color: #333;
    }

    .home-info .price {
        color: #d63384;
        font-weight: bold;
    }
</style>

<body>
    <%- include('partials/header') %>
    <main>
        <h1>Here are the registered homes</h1>
        <ul class="grid-container">
            <% registeredHome.forEach(function(home) { %>
                <li class="home-card">
                    <img src="<%= home.image %>" alt="<%= home.housename %>" class="home-image">
                    <div class="home-info">
                        <h2><%= home.housename %></h2>
                        <p><strong>Location:</strong> <%= home.location %></p>
                        <p class="price"><strong>Price:</strong> $<%= home.price %></p>
                        <p><strong>Rating:</strong> <%= home.rating %> ‚≠ê</p>
                        <p><strong>Contact:</strong> <%= home.contact %></p>
                    </div>
                </li>
            <% }) %>
        </ul>
    </main>
</body>
</html>
