<%- include('partials/head') %>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
    }

    main {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 90vh;
    }

    .message-box {
        background-color: #ffe4ec;
        padding: 2rem 3rem;
        border-radius: 16px;
        box-shadow: 0 8px 16px rgba(255, 105, 180, 0.2);
        text-align: center;
        max-width: 500px;
    }

    .message-box p {
        font-size: 1.1rem;
        color: #333;
        margin-bottom: 1rem;
    }

    .message-box a {
        display: inline-block;
        margin-top: 0.5rem;
        text-decoration: none;
        color: white;
        background-color: #ff69b4;
        padding: 0.6rem 1.2rem;
        border-radius: 10px;
        transition: background-color 0.3s ease;
    }

    .message-box a:hover {
        background-color: #ff1493;
    }
</style>

<body>
    <%- include('partials/header') %>
    <main>
        <div class="message-box">
            <p><strong>Your home has been added successfully!</strong></p>
            <p>Best regards,</p>
            <p>The Airbnb Team</p>
            <p><a href="/">Go to Home</a></p>
            <p><a href="/host/add-home">Add another home</a></p>
        </div>
    </main>
</body>
</html>
